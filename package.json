{
  "name": "frontend-utils",
  "description": "Monorepo for frontend utils",
  "version": "1.0.0",
  "author": "andrewgeorgemitchell",
  "license": "MIT",
  "private": true,
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewgeorgemitchell/design-system.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "cz",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run --scope @andrewgeorgemitchell/design-system build",
    "lint": "eslint './**/*.tsx' './**/*.ts' './**/*.js' './**/*.json'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "auto": "^10.37.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "lerna": "^5.0.0",
    "prettier": "^2.6.2",
    "yarn": "^1.22.18"
  },
  "peerDependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "auto": {
    "plugins": [
      "npm",
      "released"
    ]
  }
}
